{
    "name": "fitn/akelia",
    "type": "symfony-bundle",
    "description": "Connector between Akeneo PIM and Thelia",
    "keywords": ["pim", "akeneo", "ecommerce", "e-commerce", "thelia", "connector"],
    "license": "MIT",
    "authors": [
        {
            "name": "Romain Monceau",
            "email": "monceau.romain@gmail.com"
        }
    ],
    "require": {
        "akeneo/pim-community-dev": "1.2.*@stable",
        "symfony/symfony": "2.3.*",
        "symfony/icu": "1.1.",
        "thelia/api-client": "~1.0"
    },
    "require-dev": {
        "phpspec/phpspec": "2.1.*@stable",
        "squizlabs/php_codesniffer": "2.1.*@stable",
        "pdepend/pdepend": "2.0.*@stable",
        "phpmd/phpmd": "2.1.*@stable",
        "fabpot/php-cs-fixer": "@stable"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/akeneo/pim-community-dev.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/akeneo/platform.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/thelia/thelia-api-client.git"
        }
    ],
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "Fitn\\Bundle\\AkeliaBundle\\": "" }
    },
    "minimum-stability": "dev"
}
